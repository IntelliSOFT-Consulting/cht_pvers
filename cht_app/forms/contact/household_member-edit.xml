        </input>
        <input ref="/data/household_member/ephemeral_dob/age_months">
          <label ref="jr:itext('/data/household_member/ephemeral_dob/age_months:label')"/>
        </input>
        <select appearance="columns" ref="/data/household_member/ephemeral_dob/dob_method">
          <label ref="jr:itext('/data/household_member/ephemeral_dob/dob_method:label')"/>
          <item>
            <label ref="jr:itext('/data/household_member/ephemeral_dob/dob_method/approx:label')"/>
            <value>approx</value>
          </item>
        </select>
        <input ref="/data/household_member/ephemeral_dob/dob_debug">
          <label ref="jr:itext('/data/household_member/ephemeral_dob/dob_debug:label')"/>
        </input>
      </group>
      <select1 appearance="columns" ref="/data/household_member/sex">
        <label ref="jr:itext('/data/household_member/sex:label')"/>
        <item>
          <label ref="jr:itext('/data/household_member/sex/male:label')"/>
          <value>male</value>
        </item>
      </select1>
      <input ref="/data/household_member/phone">
        <label ref="jr:itext('/data/household_member/phone:label')"/>
      </input>
      <input ref="/data/household_member/phone_alternate">
        <label ref="jr:itext('/data/household_member/phone_alternate:label')"/>
      </input>
      <select1 ref="/data/household_member/relationship_to_primary_caregiver">
        <label ref="jr:itext('/data/household_member/relationship_to_primary_caregiver:label')"/>
        <item>
          <label ref="jr:itext('/data/household_member/relationship_to_primary_caregiver/spouse:label')"/>
          <value>spouse</value>
        </item>
        <item>
          <label ref="jr:itext('/data/household_member/relationship_to_primary_caregiver/child:label')"/>
          <value>child</value>
        </item>
        <item>
          <label ref="jr:itext('/data/household_member/relationship_to_primary_caregiver/grandchild:label')"/>
          <value>grandchild</value>
        </item>
        <item>
          <label ref="jr:itext('/data/household_member/relationship_to_primary_caregiver/brother:label')"/>
          <value>brother</value>
        </item>
        <item>
          <label ref="jr:itext('/data/household_member/relationship_to_primary_caregiver/sister:label')"/>
          <value>sister</value>
        </item>
        <item>
          <label ref="jr:itext('/data/household_member/relationship_to_primary_caregiver/other:label')"/>
          <value>other</value>
        </item>
      </select1>
      <input ref="/data/household_member/relationship_to_pc_other">
        <label ref="jr:itext('/data/household_member/relationship_to_pc_other:label')"/>
      </input>
      <group appearance="hidden" ref="/data/household_member/meta"/>
    </group>
  </h:body>
