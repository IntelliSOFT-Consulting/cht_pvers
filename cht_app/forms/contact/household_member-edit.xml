      <bind nodeset="/data/inputs" relevant="false()"/>
      <bind nodeset="/data/inputs/user/contact_id" type="string"/>
      <bind nodeset="/data/inputs/user/facility_id" type="string"/>
      <bind nodeset="/data/inputs/user/name" type="string"/>
      <bind nodeset="/data/household_member/parent" type="string"/>
      <bind nodeset="/data/household_member/type" type="string"/>
      <bind nodeset="/data/household_member/contact_type" type="string"/>
      <bind nodeset="/data/household_member/name" type="string" required="true()"/>
      <bind nodeset="/data/household_member/display_name" type="string" calculate="../name"/>
      <bind nodeset="/data/household_member/notes" type="string"/>
      <bind nodeset="/data/household_member/date_of_birth" type="string" calculate="../ephemeral_dob/dob_iso" required="true()"/>
      <bind nodeset="/data/household_member/date_of_birth_method" type="string" calculate="../ephemeral_dob/dob_method"/>
      <bind nodeset="/data/household_member/ephemeral_dob/dob_calendar" type="date" relevant="not(selected(../dob_method,'approx'))" jr:constraintMsg="Date must be before today" required="true()" constraint=". &lt;= now()"/>
      <bind nodeset="/data/household_member/ephemeral_dob/age_label" readonly="true()" type="string" relevant="selected(../dob_method,'approx')"/>
      <bind nodeset="/data/household_member/ephemeral_dob/age_years" type="int" relevant="selected(../dob_method,'approx')" jr:constraintMsg="Age must be between 0 and 130" required="true()" constraint=". &gt;= 0 and . &lt;= 130"/>
      <bind nodeset="/data/household_member/ephemeral_dob/age_months" type="int" relevant="selected(../dob_method,'approx')" jr:constraintMsg="Months must between 0 and 11" constraint=". &gt;= 0 and . &lt;= 11"/>
      <bind nodeset="/data/household_member/ephemeral_dob/dob_method" type="select"/>
      <bind nodeset="/data/household_member/ephemeral_dob/dob_approx" type="string" calculate="add-date(today(), 0- /data/household_member/ephemeral_dob/age_years , 0- /data/household_member/ephemeral_dob/age_months )"/>
      <bind nodeset="/data/household_member/ephemeral_dob/dob_raw" type="string" calculate="if(not(selected(  /data/household_member/ephemeral_dob/dob_method ,'approx')), 
 /data/household_member/ephemeral_dob/dob_calendar ,
 /data/household_member/ephemeral_dob/dob_approx )"/>
      <bind nodeset="/data/household_member/ephemeral_dob/dob_iso" type="string" calculate="format-date-time(../dob_raw,&quot;%Y-%m-%d&quot;)"/>
      <bind nodeset="/data/household_member/ephemeral_dob/dob_debug" readonly="true()" type="string" relevant="false()"/>
      <bind nodeset="/data/household_member/sex" type="select1" required="true()"/>
      <bind nodeset="/data/household_member/phone" type="tel" jr:constraintMsg="Please enter a valid local number, or use the standard international format, which includes a plus sign (+) and country code. For example: +254712345678" constraint="true()"/>
      <bind nodeset="/data/household_member/phone_alternate" type="tel" jr:constraintMsg="Please enter a valid local number, or use the standard international format, which includes a plus sign (+) and country code. For example: +254712345678" constraint="true()"/>
      <bind nodeset="/data/household_member/role" type="string"/>
      <bind nodeset="/data/household_member/relationship_to_primary_caregiver" type="select1" required="true()"/>
      <bind nodeset="/data/household_member/relationship_to_pc_other" type="string" relevant="../relationship_to_primary_caregiver = 'other'" required="true()"/>
      <bind nodeset="/data/household_member/meta/created_by" type="string" calculate="../../../inputs/user/name"/>
      <bind nodeset="/data/household_member/meta/created_by_person_uuid" type="string" calculate="../../../inputs/user/contact_id"/>
      <bind nodeset="/data/household_member/meta/created_by_place_uuid" type="string" calculate="../../../inputs/user/facility_id"/>
      <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
    </model>
  </h:head>
  <h:body>
    <group ref="/data/inputs">
      <group ref="/data/inputs/user">
        <input ref="/data/inputs/user/contact_id"/>
        <input ref="/data/inputs/user/facility_id"/>
        <input ref="/data/inputs/user/name"/>
